
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClayHaven</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Quattrocento:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            width: 100%;
            height: 100vh;
            background-color: #e6d8cb; 
            background-image: linear-gradient( 45deg, rgba(169, 149, 138, 0.2) 25%, transparent 25%, transparent 50%, rgba(169, 149, 138, 0.2) 50%, rgba(169, 149, 138, 0.2) 75%, transparent 75%, transparent ), linear-gradient( -45deg, rgba(169, 149, 138, 0.2) 25%, transparent 25%, transparent 50%, rgba(169, 149, 138, 0.2) 50%, rgba(169, 149, 138, 0.2) 75%, transparent 75%, transparent );
            background-size: 50px 50px;
        }

        .navbar-custom {
            background-color: #a9958a;
            font-family: 'Quattrocento', serif;
        }

            .navbar-custom .nav-link, .navbar-custom .navbar-brand {
                color: white !important;
                font-size:25px;

            }

                .navbar-custom .nav-link:hover {
                    opacity: 0.8;
                }
    </style>
</head>
<body>
    <header class="navbar-custom p-3 shadow-sm">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index " style="font-size:30px">ClayHaven</a>
            <nav class="d-flex gap-4">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                @if (ViewData["ShowSignOut"] != null && (bool)ViewData["ShowSignOut"])
                {
                    <form method="post" asp-controller="Account" asp-action="Signout">
                        <button type="submit" class="btn btn-outline-light">Sign Out</button>
                    </form>
                }
            </nav>
        </div>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-center p-3 text-muted">
        <div class="container">
            &copy; 2025 - ClayHaven - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>