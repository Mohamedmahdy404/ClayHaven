
@model PresentationLayer.Actions_Request.Product.UpdateProductAction
<!DOCTYPE html>
<html>
<head>
    <title>Edit Product</title>
    <style>
        .form-container {
            font-family: Arial, sans-serif;
            margin: 20px auto;
            padding: 20px;
            max-width: 400px;
            background-color: #f9f9f9;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

            .form-container h2 {
                text-align: center;
                color: #2c3e50;
            }

        .form-field {
            margin-bottom: 15px;
        }

            .form-field label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .form-field input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

        .product-image {
            display: block;
            margin: 10px auto;
            width: 150px; /* Fixed width */
            height: 150px; /* Fixed height */
            border-radius: 8px;
            object-fit: cover; /* Ensures the image is nicely cropped */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2); /* Adds depth */
        }

        .form-actions {
            text-align: center;
            margin-top: 20px;
        }

            .form-actions button {
                padding: 10px 15px;
                background-color: #3498db;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 14px;
            }

                .form-actions button:hover {
                    background-color: #2980b9;
                }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Create New Product</h2>
        <form asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data">
            <input type="hidden" value="@Model.ProductId" id="ProductId" name="ProductId" />
            <img src="~/Photos/@Model.PhotoName" alt="Product Image" class="product-image" />
            <div class="form-field">
                <label for="Name">Product Name</label>
                <input type="text" value="@Model.Name" id="Name" name="Name" required />
            </div>
            <div class="form-field">
                <label for="Price">Price</label>
                <input type="number" step="0.01" value="@Model.Price" id="Price" name="Price" required />
            </div>
            <div class="form-field">
                <label for="Amount">Amount</label>
                <input type="number" value="@Model.Amount" id="Amount" name="Amount" />
            </div>
            <div class="form-actions">
                <button type="submit">Save</button>
            </div>
        </form>
    </div>
</body>
</html>
