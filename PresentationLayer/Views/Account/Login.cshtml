				@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PresentationLayer.Actions_Request.Identity.UserLoginAction

@{
    ViewData["Title"] = "Login";
}

<!-- Login Section -->
<section style="background-image: url('/images/banner-image1.jpg'); background-repeat: no-repeat; background-position: center; background-size: cover; height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="bg-white p-5 rounded shadow" style="opacity: 0.9;">
                    <h2 class="text-center mb-4" style="font-family: 'Lora', serif; font-weight: 700; color: #333;">Login</h2>

                    <!-- Display validation summary for general errors -->
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Login form -->
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label" style="font-family: 'Quattrocento', serif; font-weight: 400; color: #555;">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" style="font-family: 'Lora', serif; font-weight: 400;">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label" style="font-family: 'Quattrocento', serif; font-weight: 400; color: #555;">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" style="font-family: 'Lora', serif; font-weight: 400;">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="RememberMe">
                            <label asp-for="RememberMe" class="form-check-label" style="font-family: 'Quattrocento', serif; font-weight: 400; color: #555;">Remember Me</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100" style="font-family: 'Lora', serif; font-weight: 700; background-color: #007bff; border: none; padding: 10px;">Login</button>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Register" asp-controller="Account" class="btn btn-outline-secondary w-100" style="font-family: 'Lora', serif; font-weight: 700; padding: 10px;">Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>