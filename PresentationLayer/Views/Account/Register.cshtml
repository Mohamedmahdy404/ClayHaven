                        @using Microsoft.AspNetCore.Mvc.TagHelpers
@model PresentationLayer.Actions_Request.Identity.CreateUserAction

@{
    ViewData["Title"] = "Register";
}

<style>
    /* Custom styles for the register page */
    .register-section {
        background-image: url('/images/banner-image1.jpg');
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px; /* Add padding to prevent the form from touching the edges */
    }

    .register-form {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
        max-height: 90vh; /* Limit the height to 90% of the viewport height */
        overflow-y: auto; /* Add scroll if the content exceeds the height */
    }

        .register-form h2 {
            font-family: 'Lora', serif;
            font-weight: 700;
            color: #333;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .register-form label {
            font-family: 'Quattrocento', serif;
            font-weight: 400;
            color: #555;
        }

        .register-form input,
        .register-form select {
            font-family: 'Lora', serif;
            font-weight: 400;
            border-radius: 5px;
            border: 1px solid #ddd;
            padding: 0.5rem;
            width: 100%; /* Ensure inputs take full width */
        }

            .register-form input:focus,
            .register-form select:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .register-form .btn-primary {
            font-family: 'Lora', serif;
            font-weight: 700;
            background-color: #007bff;
            border: none;
            padding: 10px;
            width: 100%;
            margin-top: 1rem;
        }

        .register-form .btn-secondary {
            font-family: 'Lora', serif;
            font-weight: 700;
            background-color: transparent;
            border: 1px solid #007bff;
            color: #007bff;
            padding: 10px;
            width: 100%;
            margin-top: 1rem;
        }

            .register-form .btn-secondary:hover {
                background-color: #007bff;
                color: #fff;
            }

        .register-form .text-danger {
            font-family: 'Quattrocento', serif;
            font-weight: 400;
            color: #dc3545;
        }
</style>

<!-- Register Section -->
<section class="register-section">
    <div class="register-form">
        <h2>Register</h2>

        <!-- Display validation summary for general errors -->
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <!-- Register form -->
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username">
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="password" class="form-label">Password</label>
                <input asp-for="password" type="password" class="form-control" placeholder="Enter your password">
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PasswordConfirm" class="form-label">Confirm Password</label>
                <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Confirm your password">
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>

            <!-- Role Selection -->
            <div class="mb-3">
                <label for="RoleName" class="form-label">Select Role</label>
                <select asp-for="RoleName" class="form-control">
                    <option value="" disabled selected>Select a role</option>
                    @foreach (var role in ViewBag.Roleslist as List<string>)
                    {
                        if (role != "Admin")
                        {
                            <option value="@role">@role</option>
                        }
                    }
                </select>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" asp-controller="Account" class="btn btn-secondary">Login</a>
        </div>
    </div>
</section>